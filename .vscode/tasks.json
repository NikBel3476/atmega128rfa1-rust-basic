{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "build",
			"args": ["-Z", "build-std=core", "--target" ,"avr-atmega128rfa1.json", "--release"]
		},
		{
			"type":"shell",
			"command": "avrdude",
			"label": "flush",
			"args": ["-patmega128rfa1", "-cusbasp", "-Pusb", "-Uflash:w:target/avr-atmega128rfa1/release/blink.elf:e"]
		},
		{
			"type": "shell",
			"label": "build and flush",
			"dependsOn": ["build", "flush"],
			"dependsOrder": "sequence"
		}
	]
}